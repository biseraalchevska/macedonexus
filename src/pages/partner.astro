---
import BaseLayout from "../layouts/BaseLayout.astro";
import SmallHero from "../components/SmallHero.astro";
import SectionSplit from "../components/SectionSplit.astro";
---

<BaseLayout title="Partner With Us">
  <div class="about-top">

    <SmallHero
image="/woodcarv.png"
/>

    <SectionSplit
title="Partner With Us"
className="partner-variant"
text="Macedonexus partners with individuals and organizations who care about people, culture and continuity. Our approach is personal, careful and long-term — because meaningful partnerships are built on understanding, not transactions."
image="/ohrid.png"
/>
</div>
<section class="consultation">
    <div class="consultation-inner">
      <h2>Request a Consultation</h2>
      <div class="bridge-ornament">
        <img src="/divider.png" alt="" />
      </div>
  
      <p class="consultation-sub">
        Tell us about your organization and how you’d like to collaborate.
        We will respond within 48 hours.
      </p>
  
      <form class="consultation-form">
        <input type="text" placeholder="Full Name" required />
        <input type="text" placeholder="Organization / Company" />
        <input type="email" placeholder="Email Address" required />
  
        <select>
          <option>Select Partnership Type</option>
          <option>Cultural Collaboration</option>
          <option>Language Education</option>
          <option>Medical Coordination</option>
          <option>Genealogy & Diaspora Projects</option>
          <option>Other</option>
        </select>
  
        <textarea placeholder="Send us a message!" rows="5"></textarea>
  
        <button type="submit" class="btn-primary">
          Submit Request
        </button>
      </form>
    </div>
  </section>
  

</BaseLayout>
